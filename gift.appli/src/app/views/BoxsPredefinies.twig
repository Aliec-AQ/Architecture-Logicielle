{% extends 'index.twig' %}
{% block content %}

    {% if boxsPredefinies is not null %}
        <div class="centerdiv">
            <h1>Boxs prédéfinies</h1>
        </div>
        <div class="cardContainer">
            {% for box in boxsPredefinies %}

                <a class="card" href="{{ url_for('box') ~ "?id=" ~ box.id }}">
                    <h2>{{box.libelle}}</h2>
                    <p>prix : {{box.montant}}</p>
                </a>
            {% endfor %}
        </div>
    {% else %}
        <div class="centerdiv">
            <h1>Aucune box prédéfinies</h1>
        </div>
    {% endif %}
    <div class="centerdiv">
        <p><a class="bouton" href="{{ url_for('root') }}">Retour au menu</a></p>
    </div>
{% endblock %}